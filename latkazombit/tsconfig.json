{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "types": ["reflect-metadata", "@kiigame/adventure_engine"],
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}